<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/five_padding"
    android:background="@drawable/backgrond"
    tools:context="com.droidsoftbd.hhbregistration.UserListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#1B5E20"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"
        android:drawableRight="@drawable/ic_sync_24dp"
        android:layout_marginBottom="@dimen/five_padding"
        android:text="Registered User List" />

    <ListView

        android:padding="5dp"
        android:id="@+id/userListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>
