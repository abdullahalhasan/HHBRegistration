<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/five_padding"
    tools:context="com.droidsoftbd.hhbregistration.AboutActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:onClick="droidSoft"
        android:textColor="#295478"
        android:text="Developed by Droidsoft Bangladesh" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/hhb_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="29dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Helping Hand Bangladesh"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="23dp"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:onClick="facebookGroup"
        android:layout_toStartOf="@+id/imageView"
        android:text="Join Us" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/round_button"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/imageView"
        android:onClick="facebookPage"
        android:text="Like Page" />
</RelativeLayout>
